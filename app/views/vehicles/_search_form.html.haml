=form_tag(search_vehicles_path, data: {turbo_frame: 'search_results'}, method: :get) do
  .max-w-xl.mx-auto.flex.flex-wrap.items-center
  =text_field_tag 'search_term', nil, placeholder: t('search.placeholder'),
        class: 'w-3/6 border border-gray-400 shadow-md p-3 text-gray-600 mr-2 rounded focus:outline-none'
  =submit_tag t('search.label'), data: { disable_with: false },
        class: 'w-1/6 bg-green-500 text-white text-base font-semibold py-3 rounded shadow hover:bg-green-400'
